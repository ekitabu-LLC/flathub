                {
                    "type": "file",
                    "url": "https://github.com/ekitabu-LLC/flathub/releases/download/v4.0.1/eKitabu_4.5.7_amd64.deb",
                    "sha256": "1460e1b02d300b3cb98299d407ed9bed5b96357f375e71dacb1ba7300e989202",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/ekitabu-LLC/flathub/tags",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
